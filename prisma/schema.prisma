generator client {
  provider = "prisma-client-js"
  output   = "../api/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @unique @default(uuid())
  username       String     @unique
  password       String
  createdAt      DateTime   @default(now())
  documents      Document[] @relation("owner")
  guestDocuments Document[] @relation("guest")
  documentCount  Int        @default(0)
  Session        Session?

  @@index([username])
}

model Session {
  id             String @unique @default(uuid())
  userId         String @unique
  User           User   @relation(fields: [userId], references: [id])
  activeSessions Int    @default(0)
}

model Document {
  documentId  String   @id @unique @default(uuid())
  title       String   @db.VarChar(64)
  preview     String?  @db.VarChar(127)
  content     String   @db.VarChar(16383)
  createdAt   DateTime @default(now())
  lastUpdated DateTime @default(now())
  userId      String
  User        User     @relation("owner", fields: [userId], references: [id])
  guests      User[]   @relation("guest")
}
